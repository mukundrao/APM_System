<div class="row">
<div class="col-sm-4">
            <div class="container name_card">
 
                <h1 class="Dashboard">Teacher Dashboard</h1>
                <div class="card" style="width: 18rem;">
                    <img src="../teacher.jpg" class="card-img-top" alt="teacher photo">



                    <div class="card-body">
                

                        <table class="table">
                            <tbody>
                              <tr>
                                <th scope="row">Name</th>
                                <td><%= name %></td>
                              </tr>

                              <tr>
                                <th scope="row">ID</th>
                                <td><%= id %></td>
                              </tr>

                              <tr>
                                <th scope="row">Designation</th>
                                <td><%= designation %></td>
                              </tr>

                             

                             
                            </tbody>
                          </table>
                                      
                          
                    </div>
                    
                  </div>
                </div>
                
                
</div>
          


<div class="col-sm-4">      


  <h1>Profile Actions</h1>


<div class="container d-grid gap-2">
  <div class="buttons">
    
    <form action="/t_changepwd/<%= id %>">              
    <button type="submit" class="btn btn-primary">Change Password</button>
  </form> 

</div>
  
  <div class="buttons"><form action="/t_modify/<%= id %>">              
    <button type="submit" class="btn btn-primary">Modify Certificate</button>
  </form> </div>
  
  <div class="buttons"><form action="/logout">              
    <button type="submit" class="btn btn-primary">Logout</button>
  </form> </div>

  </div>

</div>


<div class="col-sm-4">      
<h1>Certificates</h1>

<div class="container  d-grid gap-2">
  <div class="buttons"><form action="/t_pending/<%= id %>">              
    <button type="submit" class="btn btn-primary">Pending Certificates</button>
  </form> </div>

  <div class="buttons"><form action="/t_certificates/<%= id %>">              
    <button type="submit" class="btn btn-primary">View All Cerificates</button>
  </form> </div>

  <div class="buttons"><form action="/t_accepted/<%= id %>">              
    <button type="submit" class="btn btn-primary">Accepted Certificates</button>
  </form> </div>

  <div class="buttons"><form action="/t_rejected/<%= id %>">              
    <button type="submit" class="btn btn-primary">Rejected Certificates</button>
  </form> </div>
</div>

</div>
    



</div> 
