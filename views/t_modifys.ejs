            <tr>
                <th>Certificate Code</th>
                <th>Submitted By</th>
                <th>Submitted By</th>
                <th>Certificate Name</th>
                <th>Access Link</th>
                <th>Approval Status</th>
                <th>Points Allocated</th>
                <th>Header Qualification</th>
                <th>Uploaded At</th>
            </tr>
            </thead>
                <tr>
                    <td><%= result.code %></td>
                    <td><%= result.usn %></td>
                    <td><%= result.sname %></td>
                    <td><%= result.cname %></td>
                    <td width="20%" align="center"><a class ="certificates" href=<%= result.link %> target="_blank">View Certificate</a></td>
                    <td>
                        <% if(result.status === 0) {%>
                        Rejected
                        <% } else if(result.status === 1) { %>
                        Accepted
                        <% } else {%>
                        Pending
                        <% } %>
                    </td>
                    <td>
                        <%if(typeof result.points === 'number'){%>
                            <%= result.points %>
                            <% } else { %>
                            Pending
                            <% } %>
                    </td>
                    <td>
                        <% if(typeof result.category !== 'string') {%>
                            Pending
                            <% } else { %>
                        <%= result.category %>
                        <% } %>
                    </td>
                    <td><%= result.time %></td>
                </tr>
        </table>

